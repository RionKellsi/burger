<div class="row">
  {{! Burgers to eat}}
  <div class="col s6 center-align">
    <ul>
      {{#each brgr}}
        {{#unless this.devoured}}
          <div class="card light-blue">
            <p>
              {{this.id}}. {{this.burger_name}}

              <form action="update/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="1">
                <button type="submit" class="waves-effect waves-light btn green z-depth-4">DEVOUR IT!</button>
              </form>
  
            </p>
          </div>
        {{/unless}}
      {{/each}}
    </ul>
  </div>

  {{! Devoured Burgers}}
  <div class="col s6 center-align">
    <ul>
      {{#each brgr}}
        {{#if this.devoured}}
          <div class="card light-blue lighten-2">
            <p class="black-text">
              {{this.id}}. {{this.burger_name}}
            </p>
          </div>
        {{/if}}
      {{/each}}
    </ul>
  </div>
</div>